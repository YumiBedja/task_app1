<div class="main-container">
 <h2>スケジュール一覧</h2>

 <% if flash.notice %>
  <p class="notice"><%= flash.notice %></p>
 <% end %>

 <table>
  <thead>
   <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>開始日時</th>
    <th>終了日時</th>
    <th>更新日</th>
    <th>確認</th>
    <th>編集</th>
    <th>削除</th>
   </tr>
  </thead>
 
  <tbody>
   <% @tasks.each do |task| %>
    <tr>
     <td><%= task.id %></td>
     <td><%= task.title %></td>
     <td><%= task.start_date.strftime("%Y-%m-%d %H:%M") %></td>
     <td><%= task.start_end.strftime("%Y-%m-%d %H:%M") %></td>
     <td><%= task.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
     <td>
      <%= link_to "確認", task %>
     </td>
     <td>
      <%= link_to "編集", [:edit, task] %>
     </td>
     <td>
      <%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除しますか？" } %>
     </td>
    </tr>
   <% end %>
  </tbody>
 </table>

 <p><%= link_to "スケジュール新規登録", :new_task %></p>
</div>
